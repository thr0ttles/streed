                                        <DataTemplate>
                                            <TextBlock Text="{Binding}"
                                                       FontSize="14" />
                                        </DataTemplate>
                                    </chart:CategoricalAxis.LabelTemplate>
                                </chart:CategoricalAxis>
                            </chart:RadCartesianChart.VerticalAxis>

                            <chart:RadCartesianChart.Annotations>
                                <chart:CartesianGridLineAnnotation Axis="{Binding ElementName=verticalAxis}"
                                                                   Label="{Binding Activity.AverageWatts, Converter={StaticResource ConvertToInt}}"
                                                                   Value="{Binding Activity.AverageWatts, Converter={StaticResource WAvgPwrToCategory}}"
                                                                   Stroke="{StaticResource GrayBrush}"
                                                                   Opacity="{Binding PowerActivityZone.SensorBased, Converter={StaticResource BoolToOpacity}, ConverterParameter=true}"
                                                                   StrokeThickness="1"
                                                                   Foreground="Purple"
                                                                   DashArray="3">
                                    <chart:CartesianGridLineAnnotation.LabelDefinition>
                                        <chart:ChartAnnotationLabelDefinition Location="Top"
                                                                              HorizontalAlignment="Center"
                                                                              Format="{}Est Avg {0} W"
                                                                              VerticalOffset="-2" />
                                    </chart:CartesianGridLineAnnotation.LabelDefinition>
                                </chart:CartesianGridLineAnnotation>
                                <chart:CartesianGridLineAnnotation Axis="{Binding ElementName=verticalAxis}"
                                                                   Label="{Binding Activity.WeightedAverageWatts}"
                                                                   Value="{Binding Activity.WeightedAverageWatts, Converter={StaticResource WAvgPwrToCategory}}"
                                                                   Stroke="{StaticResource GrayBrush}"
                                                                   Opacity="{Binding PowerActivityZone.SensorBased, Converter={StaticResource BoolToOpacity}, ConverterParameter=false}"
                                                                   StrokeThickness="1"
                                                                   Foreground="Purple"
                                                                   DashArray="3">
                                    <chart:CartesianGridLineAnnotation.LabelDefinition>
                                        <chart:ChartAnnotationLabelDefinition Location="Top"
                                                                              HorizontalAlignment="Center"
                                                                              Format="{}Weighted Avg {0} W"
                                                                              VerticalOffset="-2" />
                                    </chart:CartesianGridLineAnnotation.LabelDefinition>
                                </chart:CartesianGridLineAnnotation>
                            </chart:RadCartesianChart.Annotations>

                            <chart:BarSeries ItemsSource="{Binding PowerData}"
                                             ShowLabels="True"
                                             ValueBinding="Time"
                                             CategoryBinding="Power">
                                <chart:BarSeries.PointTemplate>
                                    <DataTemplate>
                                        <Rectangle Fill="#cea2c3" />
                                    </DataTemplate>
                                </chart:BarSeries.PointTemplate>
                                <chart:BarSeries.LabelDefinitions>
                                    <chart:ChartSeriesLabelDefinition HorizontalAlignment="Right"
                                                                      VerticalAlignment="Center">
                                        <chart:ChartSeriesLabelDefinition.Template>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DataItem.Time, Converter={StaticResource SecondsToTime}}"
                                                           Style="{StaticResource AppPhoneTextXSmallStyle}"
                                                           Margin="4,0,0,0"
                                                           Foreground="{StaticResource GrayBrush}" />
                                            </DataTemplate>
                                        </chart:ChartSeriesLabelDefinition.Template>
                                    </chart:ChartSeriesLabelDefinition>
                                </chart:BarSeries.LabelDefinitions>
                            </chart:BarSeries>
                        </chart:RadCartesianChart>
                    </Grid>
                </phone:PivotItem>
            </phone:Pivot>
        </Grid>

        <Border x:Name="ErrorBanner"
                Grid.Row="1"
                Opacity="0"
                Visibility="Collapsed"
                Background="DarkGray"
                VerticalAlignment="Top"
                Height="100">
            <Grid Margin="12,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.RowSpan="2"
                           Style="{StaticResource AppPhoneTextNormalStyle}"
                           FontFamily="Webdings"
                           Foreground="White"
                           FontSize="54"
                           VerticalAlignment="Center"
                           Text="&#126;" />
                <TextBlock x:Name="ErrorTitle"
                           Grid.Column="1"
                           Style="{StaticResource AppPhoneTextNormalStyle}"
                           Foreground="White"
                           VerticalAlignment="Bottom"
                           Text="Network Unavailable" />
                <TextBlock x:Name="ErrorMessage"
                           Grid.Column="1"
                           Grid.Row="1"
                           VerticalAlignment="Top"
                           Style="{StaticResource AppPhoneTextNormalStyle}"
                           FontSize="14"
                           Foreground="White"
                           Text="Please check your data connection" />
            </Grid>
        </Border>

        <telerik:RadBusyIndicator x:Name="Progress"
                                  AnimationStyle="AnimationStyle1"
                                  Grid.RowSpan="2"
                                  Foreground="{StaticResource StravaBrush}"
                                  Content="Loading..."
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Stretch" />

        <telerik:RadBusyIndicator x:Name="KudosProgress"
                                  Content=""
                                  AnimationStyle="AnimationStyle9"
                                  Grid.Row="0"
                                  Foreground="{StaticResource WhiteBrush}"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Stretch" />
    </Grid>

</phone:PhoneApplicationPage>